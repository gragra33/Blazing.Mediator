<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Components.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(Components.Layout.MainLayout)">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center">
                        <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
                        <h1 class="mt-3">Page Not Found</h1>
                        <p class="text-muted">Sorry, there's nothing at this address.</p>
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house me-1"></i>
                            Go Home
                        </a>
                    </div>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>
