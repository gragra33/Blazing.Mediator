<div class="card telemetry-card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="bi bi-activity me-2"></i>Telemetry Health
        </h5>
    </div>
    <div class="card-body">
        @if (_telemetryHealthLoading)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status"></div>
            </div>
        }
        else if (DataSource != null)
        {
            <div class="d-flex align-items-center">
                <i class="bi @(DataSource.IsHealthy ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger") fs-3 me-3"></i>
                <div>
                    <h6 class="mb-0">@(DataSource.IsHealthy ? "Enabled" : "Disabled")</h6>
                    <small class="text-muted">@DataSource.Message</small>
                </div>
            </div>
        }
        else
        {
            <div class="text-muted">
                <i class="bi bi-question-circle me-2"></i>Status unknown
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public TelemetryHealthDto? DataSource { get; set; }
    [Parameter] public bool Loading { get; set; }

    private bool _telemetryHealthLoading => Loading;
}